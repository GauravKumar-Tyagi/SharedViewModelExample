<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LauncherActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idBtn1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="Activity->Fragment->Fragment"
        android:background="@color/colorPrimary"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idBtn2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="Activity->Fragment->Activity"
        android:background="@color/colorPrimary"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idBtn3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="2 Fragments inside 1 Activity"
        android:background="@color/colorPrimary"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idBtn4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="2 Fragments inside 1 Fragment"
        android:background="@color/colorPrimary"
        />






</LinearLayout>